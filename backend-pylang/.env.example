# Easymart PyLang Backend Environment

# Server
HOST=0.0.0.0
PORT=8001
DEBUG=False
ENVIRONMENT=development
TEST_MODE=False

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# OpenAI
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
OPENAI_MODEL=gpt-4.1
OPENAI_MODEL=gpt-4.1
OPENAI_BASE_URL=
OPENAI_TIMEOUT=30

# LLM Defaults
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=512
LLM_TIMEOUT=30

# Backend Node.js URL
NODE_BACKEND_URL=http://localhost:3002

# Search Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
SEARCH_LIMIT_DEFAULT=5

# Advanced Hybrid Search (RRF + MMR)
SEARCH_HYBRID_ALPHA=0.6        # RRF weight: 0.6 = 60% BM25, 40% Vector
SEARCH_MMR_ENABLED=True         # Enable MMR diversification
SEARCH_MMR_LAMBDA=0.7           # MMR parameter: 0.7 = 70% relevance, 30% diversity
SEARCH_MMR_FETCH_K=50           # Fetch 50 candidates before MMR diversification
SEARCH_RRF_K=60                 # RRF constant (typically 60)

# Catalog Sync
CATALOG_SYNC_ENABLED=False
CATALOG_SYNC_INTERVAL_MINUTES=60
CATALOG_SYNC_ALLOW_CSV_FALLBACK=False

# Bundle confirmation
BUNDLE_CONFIRM_THRESHOLD=1000

# Sessions
SESSION_TIMEOUT_MINUTES=30
REDIS_URL=

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
