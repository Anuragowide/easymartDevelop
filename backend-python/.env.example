# Server Configuration
PORT=8000
NODE_ENV=development

# Python Backend Configuration
PYTHONUNBUFFERED=1

# HuggingFace API Configuration (Mistral via HF Router)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL=mistralai/Mistral-7B-Instruct-v0.2
HUGGINGFACE_BASE_URL=https://router.huggingface.co
HUGGINGFACE_TIMEOUT=30
HUGGINGFACE_MAX_RETRIES=3

# Shopify Configuration (for product indexing)
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token
SHOPIFY_API_VERSION=2024-01

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
INDEX_STORE_URL=http://localhost:9200
